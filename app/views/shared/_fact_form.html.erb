<%= form_for @fact, :url => { :action => :create, :controller => :facts } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :info, placeholder: "Compose new fact..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>